{
  "manifest_version": 3,
  "name": "Sudowrite Section Toggle",
  "version": "1.0",
  "description": "Toggle visibility of sections in Sudowrite editor.",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16_transparent.png",
      "48": "icon48_transparent.png",
      "128": "icon128_transparent.png"
    }
  },
  "host_permissions": ["<all_urls>"]
}